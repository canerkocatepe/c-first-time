#include <iostream>


using namespace std;
int main() {

	string isim = "Caner Kocatepe";
	int yas = 20;
	char NotOrtalamasi = 'A';			//tek bir karakter tutuyor char komudu '  ' kullanırız  tek bite
	//aski tablosu var char için bir karşılığı var char not ortalaması = 65 (mesela 65 a ya denk geliyor ) yapınca aynı şey
	float SayisalNotOrtalamsi = 3.25;   //ondalıklı kısmı tutar.... FLOAT YERİNE DOUBLE DA GİREBİLİRİZ .... AZ ondalık için YAZZIYORSAK FLOAT 
	                                    //Pİ SAYISI GİBİ Bİ SAYI İÇİN UZUN OLAN DOUBLE İLE TUTULUR . 
	bool sinavagirdimi = true;          //true yerine 1 yazabiliriz. tek bit false yada 0 .
	




	cout << "Merhaba !" << endl << endl << "Ogrenci Adi-Soyadi :  " << isim << endl << endl;
		cout << "Ogrenci yasi : " << yas;
		cout << endl << endl;
		cout << "Not Ortalamasi : " << NotOrtalamasi  << endl << endl;
		cout << "Ogrenci NOT ortalamsi : " << SayisalNotOrtalamsi << endl << endl;
		cout << "Ogrenci Sinava Girdi mi : " << sinavagirdimi << endl << endl;  









		return 0;


		
}
